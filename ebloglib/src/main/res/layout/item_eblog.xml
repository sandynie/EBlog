<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="5dp">


    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:maxLines="5"
        android:ellipsize="end"
        android:layout_below="@+id/tv_item_title"
        />

    <LinearLayout
        android:id="@+id/item_layout_follow"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/btn_item_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/follow"
            />

        <TextView
            android:id="@+id/tv_item_follow_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/item_layout_zan"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/item_layout_follow"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/btn_item_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/zan"
            />

        <TextView
            android:id="@+id/tv_item_zan_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>







</RelativeLayout>
